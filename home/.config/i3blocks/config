# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[date_text]
full_text=
color=#9fbc00
separator=false

[cpu_usage]
command=~/.local/share/i3blocks-contrib/cpu_usage/cpu_usage
interval=1
#min_width=CPU: 100.00%
#separator=false

#[load_average]
#interval=10

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
command=~/.local/share/i3blocks-contrib/battery/battery
label=BAT
label=⚡
#instance=1
interval=30

# Date Time
#
[date_text]
full_text=
color=#9fbc00
separator=false

[time]
command=date '+%Y-%m-%d %H:%M'
interval=5

